{
  "settings": {
    "analysis": {
      "tokenizer": {
        "number_tokenizer": {
          "type": "pattern",
          "pattern": "\\d{4,4}?",
          "flags": "",
          "group": 0
        }
      },
      "filter": {
        "custom_shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3,
          "output_unigrams": true,
          "token_separator": ""
        }
      },
      "filter": {
        "custom_stopwords_filter": {
          "type": "stop",
          "stopwords": "_english_"
        }
      },
      "filter": {
        "custom_synonyms_filter": {
          "type" : "synonym",
          "synonyms" : [
            "i => 1 => one",
            "ii => 2 => two",
            "iii => 3 => three",
            "iv => 4 => four",
            "v => 5 => five",
            "vi => 6 => six",
            "vii => 7 => seven",
            "viii => 8 => eight",
            "ix => 9 => nine",
            "x => 10 => ten",
            "xi => eleven => 11"
          ]
        }
      },
      "analyzer" : {
        "custom_fkinawesome_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "custom_synonyms_filter",
            "custom_stopwords_filter",
            "asciifolding",
            "lowercase",
            "word_delimiter_graph",
            "custom_shingle_filter"
          ]
        }
      },
      "analyzer": {
        "number_pattern_analyzer": {
          "type": "custom",
          "tokenizer": "number_tokenizer"
        }
      }
    }
  }
}
